<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@drawable/ball">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="NBA"
              android:fontFamily="sans-serif-light"
              android:textColor="#fff"
              android:padding="40dp"
              android:layout_gravity="center"
              android:textSize="30dp"/>


    <EditText
            android:id="@+id/et_team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Equipo 1"
            android:fontFamily="sans-serif-light"
            android:textColorHint="#000 "/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

        <Button
                android:id="@+id/btn_libre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_puntos"
                android:text="+1"/>

        <Button
                android:id="@+id/btn_doble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/btn_puntos"
                android:text="+2"/>

        <Button
                android:id="@+id/btn_triple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/btn_puntos"
                android:text="+3"/>

    </LinearLayout>

    <EditText
            android:id="@+id/et_team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Equipo 2"
            android:fontFamily="sans-serif-light"
            android:textColorHint="#000"/>


    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">


        <Button
                android:id="@+id/btn_libre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/btn_puntos"
                android:text="+1"/>

        <Button
                android:id="@+id/btn_doble2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/btn_puntos"
                android:text="+2"/>

        <Button
                android:id="@+id/btn_triple2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/btn_puntos"
                android:text="+3"/>

    </LinearLayout>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Fecha"
              android:fontFamily="sans-serif-light"
              android:textColorHint="#000"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Hora"
              android:fontFamily="sans-serif-light"
              android:textColorHint="#000"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/refresh"/>
    </LinearLayout>


    <GridLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:rowCount="2">

        <TextView
                android:id="@+id/tv_team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="sans-serif-light"
                android:textSize="20dp"
                android:text="Equipo 1"
                android:textColor="#fff"/>

        <TextView
                android:id="@+id/tv_team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Equipo 2"
                android:textSize="20dp"
                android:textColor="#fff"/>

        <TextView
                android:id="@+id/tv_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="sans-serif-light"
                android:textSize="20dp"
                android:text="Puntaje 1"
                android:textColor="#fff"/>

        <TextView
                android:id="@+id/tv_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="sans-serif-light"
                android:textSize="20dp"
                android:text="Puntaje 2"
                android:textColor="#fff"/>
    </GridLayout>

</LinearLayout>